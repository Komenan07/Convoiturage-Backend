{
  "name": "api-covoiturage-ci",
  "version": "1.0.0",
  "description": "API de covoiturage avec authentification, paiements mobiles et gestion d'utilisateurs pour la Côte d'Ivoire",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node utils/seeder.js",
    "seed:destroy": "node utils/seeder.js --destroy",
    "check-deps": "npm outdated",
    "security-audit": "npm audit"
  },
  "keywords": [
    "covoiturage",
    "ridesharing",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "backend",
    "côte d'ivoire",
    "ivory coast",
    "paiement mobile",
    "mobile payment",
    "orange money",
    "mtn money"
  ],
  "author": {
    "name": "Kouadio DevTeam",
    "email": "contact@kouadio-dev.ci",
    "url": "https://kouadio-dev.ci"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kouadio-dev/api-covoiturage-ci.git"
  },
  "bugs": {
    "url": "https://github.com/kouadio-dev/api-covoiturage-ci/issues"
  },
  "homepage": "https://github.com/kouadio-dev/api-covoiturage-ci#readme",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.2",
    "rate-limit-mongo": "^2.3.2",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "twilio": "^5.8.2",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
